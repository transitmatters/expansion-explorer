{
  "Parameters": {
    "ExpansionHostname": {
      "Type": "String",
      "Default": "expansion-beta.labs.transitmatters.org",
      "AllowedPattern": "^expansion\\.labs\\.transitmatters\\.org$",
      "Description": "The hostname for the site; for example: expansion.labs.transitmatters.org."
    },
    "ExpansionDomain": {
      "Type": "String",
      "Default": "labs.transitmatters.org",
      "AllowedPattern": "^labs\\.transitmatters\\.org$",
      "Description": "The parent domain of the site. Most likely transitmatters.org or labs.transitmatters.org."
    },
    "ExpansionCertArn": {
      "Type": "String",
      "Description": "The ACM ARN of the SSL certificate."
    }
  },
  "Resources": {
    "ExpansionInstance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-0a7a4e87939439934",
        "InstanceType": "t4g.small",
        "KeyName": "transitmatters-rre",
        "PropagateTagsToVolumeOnCreation": true,
        "SecurityGroupIds": [
          {
            "Ref": "RRESecurityGroup"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Sub": "expansion-${ExpansionHostname}"
            }
          },
          {
            "Key": "service",
            "Value": "expansion-explorer"
          }
        ],
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sda1",
            "Ebs": {
              "VolumeSize": 32,
              "VolumeType": "gp3"
            }
          }
        ]
      }
    },
    "ExpansionSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": {
          "Fn::Sub": "Expansion-securitygroup-${ExpansionHostname}"
        },
        "GroupDescription": "Allow HTTP/HTTPS and SSH inbound and outbound traffic",
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 80,
            "ToPort": 80,
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": 22,
            "ToPort": 22,
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "ExpansionDNSRecord": {
      "Type": "AWS::Route53::RecordSet",
      "Properties": {
        "Name": {
          "Fn::Sub": "${ExpansionHostname}."
        },
        "HostedZoneName": {
          "Fn::Sub": "${ExpansionDomain}."
        },
        "AliasTarget": {
          "HostedZoneId": "Z2FDTNDATAQYW2",
          "DNSName": {
            "Fn::GetAtt": [
              "ExpansionCloudFront",
              "DomainName"
            ]
          }
        },
        "Type": "A"
      }
    },
    "ExpansionCloudFront": {
      "Type": "AWS::CloudFront::Distribution",
      "Properties": {
        "DistributionConfig": {
          "Aliases": [
            {
              "Ref": "ExpansionHostname"
            }
          ],
          "Enabled": "true",
          "DefaultCacheBehavior": {
            "Compress": true,
            "ForwardedValues": {
              "QueryString": "true"
            },
            "TargetOriginId": "only-origin",
            "ViewerProtocolPolicy": "redirect-to-https"
          },
          "DefaultRootObject": "",
          "Origins": [
            {
              "CustomOriginConfig": {
                "OriginProtocolPolicy": "http-only"
              },
              "DomainName": {
                "Fn::GetAtt": [
                  "ExpansionInstance",
                  "PublicDnsName"
                ]
              },
              "Id": "only-origin"
            }
          ],
          "PriceClass": "PriceClass_100",
          "ViewerCertificate": {
            "MinimumProtocolVersion": "TLSv1.2_2018",
            "AcmCertificateArn": {
              "Ref": "ExpansionCertArn"
            },
            "SslSupportMethod": "sni-only"
          }
        },
        "Tags": [
          {
            "Key": "service",
            "Value": "expansion-explorer"
          }
        ]
      }
    }
  }
}